{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "bin",
        "rootDir": "src",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "allowJs": true,
        "checkJs": true,
        // dev
        // "noEmitOnError": true
        "lib": ["es2021", "dom"]
    },
    // "include": ["src/**/*"],
    "exclude": ["node_modules", "bin", "oldJS"]
}
